<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>

<?import javafx.scene.control.ComboBox?>

<?import java.lang.String?>
<VBox alignment="TOP_LEFT" spacing="10.0" xmlns:fx="http://javafx.com/fxml" fx:controller="com.zaremski.applenotesexporter.MainController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
    <Label text="Step 1: Select Notes Account" styleClass="title-label" />
    <ComboBox maxWidth="1.7976931348623157E308" prefWidth="150.0" HBox.hgrow="ALWAYS" fx:id="accountSelectorDropdown"/>
    <Label text="Step 2: Choose Output Document Format" styleClass="title-label"/>
    <HBox alignment="CENTER" spacing="10" styleClass="outputFormatButtonBox">
        <RadioButton maxWidth="1.7976931348623157E308" prefWidth="150.0" HBox.hgrow="ALWAYS" text="HTML" fx:id="radioButton1"/>
        <RadioButton maxWidth="1.7976931348623157E308" prefWidth="150.0" HBox.hgrow="ALWAYS" text="PDF" fx:id="radioButton2"/>
        <RadioButton maxWidth="1.7976931348623157E308" prefWidth="150.0" HBox.hgrow="ALWAYS" text="RTFD" fx:id="radioButton3"/>
        <RadioButton maxWidth="1.7976931348623157E308" prefWidth="150.0" HBox.hgrow="ALWAYS" text="MD" fx:id="radioButton4"/>
        <RadioButton maxWidth="1.7976931348623157E308" prefWidth="150.0" HBox.hgrow="ALWAYS" text="TXT" fx:id="radioButton5"/>
    </HBox>
    <Label text="Step 3: Select Output File Destination" styleClass="title-label"/>
    <Label text="Step 4: Export!" styleClass="title-label"/>
    <HBox alignment="CENTER" spacing="0">
        <Text text="Apple Notes Exporter v0.1 - Copyright Â© 2023 Konstantin Zaremski - Licensed under the" styleClass="footer-label"/>
        <Hyperlink text="MIT License" onAction="#handleLicenseLinkClick" styleClass="footer-label"/>
    </HBox>
</VBox>
